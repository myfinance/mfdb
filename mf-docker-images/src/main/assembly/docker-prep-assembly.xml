<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>prep</id>

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

       <!--Database-Scripts-->
        <fileSet>
            <outputDirectory>mfdb/database/changelog</outputDirectory>
            <directory>${project.build.directory}/../../changelog</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!--Database-Jars-->
        <fileSet>
            <outputDirectory>mfdb/database</outputDirectory>
            <directory>${project.build.outputDirectory}</directory>
            <includes>
                <include>postgres*.jar</include>
                <include>liquibase*.jar</include>
            </includes>
        </fileSet>

        <!--Liquibase-scripts-->
        <fileSet>
            <outputDirectory>mfdb/database</outputDirectory>
            <directory>${project.build.directory}/../../scripts</directory>
            <includes>
                <include>liquibase</include>
                <include>dac_liquibase</include>
                <include>wrapliquibase</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!--Database Dockerfile-->
        <fileSet>
            <outputDirectory>mfdb</outputDirectory>
            <directory>${project.build.directory}/../docker/mfdb</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--Postgres files-->
        <fileSet>
            <outputDirectory>mfpostgres</outputDirectory>
            <directory>${project.build.directory}/../docker/mfpostgres</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

    
    </fileSets>


</assembly>
